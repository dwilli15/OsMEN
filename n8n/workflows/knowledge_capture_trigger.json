{
  "name": "Knowledge Capture Trigger",
  "nodes": [
    {
      "id": "b2c3d4e5-2222-4bbb-cccc-000000000001",
      "parameters": {
        "httpMethod": "POST",
        "path": "capture-note",
        "responseMode": "responseNode",
        "options": {
          "allowedOrigins": "*"
        }
      },
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [
        250,
        300
      ],
      "webhookId": "capture-note-webhook"
    },
    {
      "id": "b2c3d4e5-2222-4bbb-cccc-000000000002",
      "parameters": {
        "jsCode": "// Extract note data from webhook\nconst body = $input.first().json.body || $input.first().json;\nconst { title, content, tags, folder } = body;\n\nif (!title || !content) {\n  throw new Error('Missing required fields: title and content');\n}\n\nreturn [{ json: { \n  title, \n  content, \n  tags: tags || [], \n  folder: folder || 'inbox',\n  captured_at: new Date().toISOString()\n} }];"
      },
      "name": "Extract Note Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        450,
        300
      ]
    },
    {
      "id": "b2c3d4e5-2222-4bbb-cccc-000000000003",
      "parameters": {
        "url": "http://localhost:8000/api/v1/collections/osmen_knowledge/add",
        "method": "POST",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"ids\": [\"note-{{ $now.toMillis() }}\"],\n  \"documents\": [\"{{ $json.content }}\"],\n  \"metadatas\": [{\n    \"title\": \"{{ $json.title }}\",\n    \"tags\": \"{{ $json.tags.join(',') }}\",\n    \"folder\": \"{{ $json.folder }}\",\n    \"captured_at\": \"{{ $json.captured_at }}\"\n  }]\n}",
        "options": {
          "timeout": 30000
        }
      },
      "name": "Store in ChromaDB",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [
        650,
        300
      ]
    },
    {
      "id": "b2c3d4e5-2222-4bbb-cccc-000000000004",
      "parameters": {
        "url": "http://localhost:7860/api/v1/run/knowledge-management-specialist-v1",
        "method": "POST",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"input_value\": \"New knowledge captured: {{ $json.title }}. Please acknowledge and index.\",\n  \"input_type\": \"chat\",\n  \"output_type\": \"chat\",\n  \"session_id\": \"knowledge-capture-{{ $now.format('yyyy-MM-dd') }}\"\n}",
        "options": {
          "timeout": 60000
        }
      },
      "name": "Notify Knowledge Agent",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [
        850,
        300
      ]
    },
    {
      "id": "b2c3d4e5-2222-4bbb-cccc-000000000005",
      "parameters": {
        "respondWith": "json",
        "responseBody": "={\n  \"status\": \"success\",\n  \"message\": \"Note captured and indexed\",\n  \"title\": \"{{ $json.title }}\",\n  \"folder\": \"{{ $json.folder }}\",\n  \"captured_at\": \"{{ $json.captured_at }}\"\n}",
        "options": {
          "responseCode": 200
        }
      },
      "name": "Respond to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [
        1050,
        300
      ]
    }
  ],
  "connections": {
    "Webhook Trigger": {
      "main": [
        [
          {
            "node": "Extract Note Data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Extract Note Data": {
      "main": [
        [
          {
            "node": "Store in ChromaDB",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Store in ChromaDB": {
      "main": [
        [
          {
            "node": "Notify Knowledge Agent",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Notify Knowledge Agent": {
      "main": [
        [
          {
            "node": "Respond to Webhook",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {
    "executionOrder": "v1"
  },
  "id": "b2c3d4e5-0000-4bbb-cccc-222222222222",
  "meta": {
    "instanceId": "osmen-knowledge-capture"
  },
  "tags": [
    "knowledge",
    "webhook"
  ]
}