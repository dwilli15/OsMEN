{
  "name": "OsMEN Coordinator Agent",
  "description": "Main coordinator agent that routes tasks to specialist agents",
  "nodes": [
    {
      "id": "input",
      "type": "ChatInput",
      "data": {
        "message": "User input"
      }
    },
    {
      "id": "llm",
      "type": "ChatOllama",
      "data": {
        "model": "llama2",
        "base_url": "http://ollama:11434",
        "temperature": 0.7
      }
    },
    {
      "id": "router",
      "type": "ConditionalRouter",
      "data": {
        "routes": [
          {
            "condition": "boot_hardening",
            "target": "boot_hardening_agent"
          },
          {
            "condition": "daily_brief",
            "target": "daily_brief_agent"
          },
          {
            "condition": "focus_guardrails",
            "target": "focus_guardrails_agent"
          },
          {
            "condition": "content_editing",
            "target": "content_editing_agent"
          },
          {
            "condition": "research_intel",
            "target": "research_intel_agent"
          }
        ]
      }
    },
    {
      "id": "memory",
      "type": "VectorStoreRetriever",
      "data": {
        "vector_store": "qdrant",
        "collection_name": "osmen_memory",
        "host": "http://qdrant:6333"
      }
    },
    {
      "id": "output",
      "type": "ChatOutput",
      "data": {
        "message": "Agent response"
      }
    }
  ],
  "edges": [
    {
      "source": "input",
      "target": "llm"
    },
    {
      "source": "llm",
      "target": "router"
    },
    {
      "source": "llm",
      "target": "memory"
    },
    {
      "source": "router",
      "target": "output"
    }
  ]
}
