# OsMEN Production Environment Template
# Copy to .env.production and replace placeholder values before deployment

# --- Core Services ---
POSTGRES_USER=osmen
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=osmen

DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=CHANGE_ME_SECURE

N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_SECURE
N8N_HOST=osmen.example.com
N8N_PORT=443
N8N_PROTOCOL=https
GENERIC_TIMEZONE=UTC
WEBHOOK_TUNNEL_URL=

# --- Gateway Configuration ---
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
GITHUB_TOKEN=
COPILOT_API_URL=https://api.githubcopilot.com
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
ANTHROPIC_API_KEY=
LM_STUDIO_URL=http://host.docker.internal:1234/v1
OLLAMA_URL=http://ollama:11434
LOG_LEVEL=INFO
RATE_LIMIT_PER_MINUTE=120
ALLOWED_ORIGINS=https://app.osmen.example.com
SESSION_SECRET_KEY=GENERATE_A_RANDOM_64_BYTE_KEY
GATEWAY_HOST_PORT=8080
MCP_HOST_PORT=8081
OLLAMA_HOST_PORT=11434

# --- Integrations ---
OBSIDIAN_VAULT_PATH=/absolute/path/to/obsidian

# --- Optional Profiles ---
# Set to true to enable Ollama profile
ENABLE_OLLAMA=false
