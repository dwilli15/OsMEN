{
  "name": "OsMEN Langflow Configuration",
  "version": "1.0.0",
  "settings": {
    "ollama": {
      "base_url": "http://ollama:11434",
      "default_model": "llama2",
      "temperature": 0.7,
      "max_tokens": 2048
    },
    "qdrant": {
      "host": "http://qdrant:6333",
      "collections": {
        "global": "osmen_memory",
        "boot_hardening": "boot_hardening_memory",
        "daily_brief": "daily_brief_memory",
        "focus_guardrails": "focus_guardrails_memory",
        "content_editing": "content_editing_memory",
        "research_intel": "research_intel_memory"
      },
      "embedding_size": 384
    },
    "agents": {
      "coordinator": {
        "enabled": true,
        "flow_id": "coordinator"
      },
      "specialists": {
        "boot_hardening": {
          "enabled": true,
          "flow_id": "boot_hardening_specialist",
          "temperature": 0.3
        },
        "daily_brief": {
          "enabled": true,
          "flow_id": "daily_brief_specialist",
          "temperature": 0.5
        },
        "focus_guardrails": {
          "enabled": true,
          "flow_id": "focus_guardrails_specialist",
          "temperature": 0.4
        },
        "content_editing": {
          "enabled": false,
          "flow_id": "content_editing_specialist",
          "temperature": 0.6
        },
        "research_intel": {
          "enabled": false,
          "flow_id": "research_intel_specialist",
          "temperature": 0.5
        }
      }
    },
    "memory": {
      "short_term_limit": 10,
      "long_term_threshold": 0.8,
      "retrieval_k": 5
    }
  }
}
