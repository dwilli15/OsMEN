# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_HOST=localhost
N8N_PORT=5678

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# LLM Agent Configuration (Priority Order)

# Primary: Production LLM Agents
# OpenAI (Codex, GPT-4, etc.)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# GitHub Copilot
GITHUB_TOKEN=your_github_token_here
COPILOT_API_URL=

# Amazon Q
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Secondary: Local LLM Options
# LM Studio (Primary Local - run on host)
LM_STUDIO_URL=http://host.docker.internal:1234/v1
LM_STUDIO_MODEL=local-model

# Ollama (Secondary Local - optional)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# llama.cpp (Tertiary Local - optional)
LLAMACPP_PATH=~/llama.cpp
LLAMACPP_MODELS_PATH=~/llama-models

# Qdrant Configuration
QDRANT_HOST=http://qdrant:6333
QDRANT_API_KEY=

# Langflow Configuration
LANGFLOW_HOST=http://langflow:7860

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_DB=0
REDIS_CACHE_TTL_SECONDS=60

# Agent Configuration
BOOT_HARDENING_ENABLED=true
DAILY_BRIEF_ENABLED=true
FOCUS_GUARDRAILS_ENABLED=true

# Tool Paths (Windows paths for Sysinternals and Simplewall)
SYSINTERNALS_PATH=C:\\Tools\\Sysinternals
SIMPLEWALL_PATH=C:\\Program Files\\simplewall
FFMPEG_PATH=C:\\Tools\\ffmpeg\\bin

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=./obsidian-vault

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/osmen.log
PROMETHEUS_METRICS_ENABLED=true

# Backup configuration
BACKUP_DIR=./backups
