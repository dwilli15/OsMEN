# OsMEN Application Database
OSMEN_DB_HOST=localhost
OSMEN_DB_PORT=5432
OSMEN_DB_NAME=osmen_app
OSMEN_DB_USER=osmen_app
OSMEN_DB_PASSWORD=osmen_app_password
